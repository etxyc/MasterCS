<% include ../partials/header %>

<div class="container">
        <div class="row">
            <h1 style="text-align: center">Create a New University</h1>
            <div style="width: 30%; margin: 25px auto;">
                <form action="/universities" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="image" placeholder="Image URL (Optional)">
                    </div>
                    <div class="form-group">
                            <input class="form-control" type="text" name="program" placeholder="Name of the Program">
                        </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Create</button>
                    </div>
                </form>
                <a href="/universities">Go Back</a>
            </div>
        </div>
    </div>

<% include ../partials/footer %>